                    android:id="@+id/textView70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtv_cl1_TRU"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="LUNES"
                    android:textColor="@color/white"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtv_cl2_TRU"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="MARTES"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtv_cl3_TRU"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:text="MIERCOLES"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/table_row_divider"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/chkLunes_3pm_TRU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIBRE"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chkMartes_3pm_TRU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="LIBRE"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/chKMiercoles_3pm_TRU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIBRE"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
