            android:layout_height="30dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="13dp"
            android:text="COSTO/1H = 0.00 SOLES"
            android:textColor="#FAFAFA"

            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lblCantidadPagar_TRU"
            android:layout_width="227dp"
            android:layout_height="34dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="15dp"
            android:text="S/0.00"

            android:textColor="#FBFBFB"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegresar_TRU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:backgroundTint="#B3FF5722"

                android:text="VOLVER"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnReservarTablaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/btnRegOrange"
                android:text="RESERVAR"

                app:cornerRadius="20dp" />

        </LinearLayout>

